{
    "name": "Zmey Gorynich",
    "scopeName": "source.zmeygorynich",
    "fileTypes": [".zg"],
    "patterns": [
        {
            "include": "#braces"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#identifiers"
        },
        {
            "include": "#goyda"
        },
        {
            "include": "#comments"
        }
    ],
    "repository": {
        "braces": {
            "patterns": [
                {
                    "name": "keyword.brace.open.zmeygorynich",
                    "match": "\\bухожу я в пляс\\b",
                    "settings": {
                        "foreground": "#F78C6C",
                        "fontStyle": "bold"
                    }
                },
                {
                    "name": "keyword.brace.close.zmeygorynich",
                    "match": "\\bзакончили пляски\\b",
                    "settings": {
                        "foreground": "#F78C6C",
                        "fontStyle": "bold"
                    }
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.zmeygorynich",
                    "match": "\\b(покуда|молвить|внемли|ино|аще|ли|то)\\b",
                    "settings": {
                        "foreground": "#FFCB6B"
                    }
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.zmeygorynich",
                    "match": "[+\\-*/%<>==!]+|\\*\\*",
                    "settings": {
                        "foreground": "#89DDFF"
                    }
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.zmeygorynich",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.zmeygorynich",
                            "match": "\\\\.",
                            "settings": {
                                "foreground": "#FF4500"
                            }
                        }
                    ],
                    "settings": {
                        "foreground": "#C3E88D"
                    }
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.zmeygorynich",
                    "match": "\\b\\d+\\b",
                    "settings": {
                        "foreground": "#82AAFF"
                    }
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.zmeygorynich",
                    "match": "\\b(?!покуда|молвить|внемли|ино|аще|ли|то|гойда)\\w+\\b",
                    "settings": {
                        "foreground": "#B0C9FF"
                    }
                }
            ]
        },
        "goyda": {
            "patterns": [
                {
                    "name": "punctuation.terminator.zmeygorynich",
                    "match": "\\bгойда\\b",
                    "settings": {
                        "foreground": "#5C6370",
                        "fontStyle": "italic"
                    }
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.zmeygorynich",
                    "match": "#.*$",
                    "settings": {
                        "foreground": "#6A9955",
                        "fontStyle": "italic"
                    }
                }
            ]
        }
    }
}
